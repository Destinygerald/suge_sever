{
    "version": 2,
    "builds": [
      {
        "src": "./index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/admin/(.*)",
        "dest": "./index.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "http://localhost:5173",
          "Access-Control-Allow-Credentials": "true"
        }
      },

      {
        "src": "/test",
        "dest": "./index.js",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "http://localhost:5173",
          "Access-Control-Allow-Credentials": "true"
        }
      },

      {
        "src": "/blog/(.*)",
        "dest": "./index.js",
        "methods": ["GET"],
        "headers": {
          "Access-Control-Allow-Origin": "http://localhost:5173",
          "Access-Control-Allow-Credentials": "true"
        }
      },

      {
        "src": "/(.*)",
        "dest": "./index.js",
        "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
        "headers": {
          "Access-Control-Allow-Origin": "http://localhost:5173",
          "Access-Control-Allow-Credentials": "true"
        }
      }
    ],

    "rewrites": [
      { 
        "source": "/blog/(.*)", 
        "destination": "./index.js" 
      },
      { 
        "source": "/test", 
        "destination": "./index.js" 
      },
      { 
        "source": "/admin/(.*)", 
        "destination": "./index.js" 
      }
    ]
}